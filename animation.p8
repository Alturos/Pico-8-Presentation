version 16
__lua__
-- starter template
-- ava~


function _init()
	menuitem(1, "next demo", loadnextdemo)
	-- define our walk cycle as a
	-- sequence of sprite ids
	frames = {1, 3, 4, 2}
	-- create a variable to track
	-- our frame time
	frametime	= 0
	-- create another to track
	-- our frame index
	frameidx = 1
end

function _update()
	-- every frame, increase our
	-- frametime by 1
	frametime += 1
	-- if our frame counter goes
	-- over 5...
	if(frametime > 5) then
		-- reset the frame counter
		-- and add 1 to our frameidx
		frametime = 0 
		frameidx += 1
	end
	
	-- if the frameidx overshoots
	-- our number of frames, reset
	-- it.
	if(frameidx > 4) frameidx = 1
end

function _draw()
	cls(12)
	map(0,0,0,28,16,16)
	-- instead of drawing sprite 0,
	-- draw the sprite for the 
	-- current walk frame
	spr(frames[frameidx], 60, 60, 1, 1)
	print("animation", 92, 122, 7)
end

-->8
-- demo switching

function loadnextdemo()
	load('control.p8', 'previous demo')	
end

